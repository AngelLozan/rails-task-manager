

<h1>My Tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item border-0">
    <input class="form-check-input me-1" type="checkbox" <%= 'checked' if task.completed %> id="<%= task.title %>">
    <label class="form-check-label" for="<%= task.title %>">
    <%= link_to task.title, task_path(task) %>
    </label>
    <%= link_to "- 🗑️", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"} %>
    </li>
  <% end %>
</ul>

<hr>

<%= link_to "➕ Add a new task", new_task_path %>
